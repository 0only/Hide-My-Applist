<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.About" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DefaultCardImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="DefaultCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_marginHorizontal">60dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
</resources>